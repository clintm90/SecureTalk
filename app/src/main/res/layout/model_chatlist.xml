<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:tag="@string/app_name"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/model_chatList_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="0dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="7dp"
        android:textSize="19dp"
        android:text="@string/noset"
        android:background="@android:color/transparent"
        android:textColor="@color/darkgrey"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/model_chatList_timestamp"
        android:text="@string/noset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/model_chatList_title"
        android:background="@android:color/transparent"
        android:textColor="@color/darkmiddlegrey"
        android:paddingBottom="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/model_chatList_other"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/model_chatList_timestamp"
        android:src="@drawable/ic_info_ok"
        android:paddingRight="12dp"
        android:layout_below="@+id/model_chatList_title"
        android:paddingBottom="12dp"/>

</RelativeLayout>